<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pomodoro Navi - カレンダー</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.10.1/main.min.css" rel="stylesheet" />
    <%= stylesheet_link_tag 'top', media: 'all', 'data-turbolinks-track': 'reload' %>
    <style>

      /* 共通のスタイル */
      body {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 2em;
      }

      /* カレンダーのスタイル */
      .calendar-title {
        font-size: 36px;
        text-align: center;
        margin-bottom: 1em;
      }

      total {
        display: block;
        text-align: center;
        font-size: 1.2em;
        margin-bottom: 1em;
      }

      /* カレンダーのスタイル */
      #calendarContainer {
        width: 700px;
        margin: 0 auto;
        border-radius: 8px;
        background-color: rgba(255, 255, 255, 0.1);
      }

    </style>
  </head>
<body>
  <div class="calendar-title">Pomodoro Navi Calendar</div>
  <div id="calendar">
    <total>これまでの作業時間合計：<%= @total_duration_formatted %></total>
    <div id="calendarContainer"></div>
  </div>

  <!-- カレンダー表示のためのJavaScript -->
  <script>
  document.addEventListener('turbolinks:load', function() {
    var calendarEl = document.getElementById('calendarContainer');
    if (!calendarEl) return;

    // 日毎の作業時間を計算
    var workSessions = {};
    <% @sessions.each do |session| %>
      var date = '<%= session.start_time.to_date %>';
      if (!workSessions[date]) {
        workSessions[date] = 0;
      }
      workSessions[date] += <%= session.duration %>;
    <% end %>

    var events = [];
    for (var date in workSessions) {
      events.push({
        title: workSessions[date] + ' min',
        start: date,
        allDay: true,
        backgroundColor: 'rgba(0, 128, 0, 0.3)',  // 半透明の緑色
        borderColor: 'rgba(0, 128, 0, 0.3)'
      });
    }

    var calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      events: events,
      eventContent: function(arg) {
        // 作業時間を日付欄の中央に表示
        let durationText = arg.event.title;
        return { html: '<div style="text-align: center; font-size: 18px; color: white;">' + durationText + '</div>' };
      }
    });

    calendar.render();
  });
  </script>
</body>
</html>