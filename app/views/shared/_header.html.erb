<div class="header-left">
  <%= link_to root_path, data: { turbo: false } do %>
    <h1>Pomodoro Navi</h1>
  <% end %>
</div>
<div class="header-right-logged-in">
  <div class="menu-wrapper">
    <%= image_tag 'report.png', class: 'header-icon' %>
    <ul class="menu-list">
      <li><%= link_to "Report", pomodoro_sessions_reports_day_path, data: { turbo: false } %></li>
      <li><%= link_to "Calendar", pomodoro_sessions_reports_calendar_path, data: { turbo: false } %></li>
    </ul>
  </div>
    <%= link_to edit_pomodoro_settings_path, data: { turbo: false } do %>
      <%= image_tag 'comand.png', class: 'header-icon' %>
    <% end %>
  <div class="menu-wrapper">
    <%= image_tag 'mypage.png', class: 'header-icon' %>
    <ul class="menu-list">
      <li><%= link_to "Profile", edit_user_registration_path, data: { turbo: false } %></li>
      <% if @navi_character.present? && @navi_character.persisted? %>
        <li><%= link_to "Navi", edit_navi_character_path(@navi_character), data: { turbo: false } %></li>
      <% else %>
        <li><%= link_to "Navi", new_navi_character_path, data: { turbo: false } %></li>
      <% end %>
      <li><%= link_to "Help", page_path('Help'), data: { turbo: false } %></li>
      <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
    </ul>
  </div>
</div>

<style>
/* ドロップダウンメニューのCSS */
.menu-wrapper {
  position: relative; /* アイコンの下に配置 */
  display: inline-block; /* インラインブロック要素にする */
  font-size: 20px; /* フォントサイズ */
}

.header-icon {
  margin: 0 10px; /* アイコンの左右の余白 */
}

.menu-list {
  display: none; /* メニューリストを非表示 */
  position: absolute; /* メニューを開いてもアイコンの位置を変えない */
  top: 100%; /* アイコンの下に配置 */
  right: 0; /* アイコンの右端に配置 */
  border: 1px solid #ddd; /* メニューの枠線 */
  list-style: none; /* リストのマーカーを非表示 */
  width: 160px; /* メニューの幅 */
  z-index: 11; /* メニューを最前面に表示 */
}

.menu-list a {
  display: block; /* リンクをブロック要素にする */
  text-decoration: none; /* リンクの下線を消す */
  padding: 6px 8px; /* リンクの内側の余白 */
}

.menu-wrapper:hover .menu-list {
  display: block; /* マウスオーバー時にメニューリストを表示 */
}

@media (max-width: 600px) {
  .menu-list {
    width: 180px; /* モバイル用のメニュー幅 */
    right: 50%; /* アイコンの中央に配置 */
    transform: translateX(50%); /* 中央に配置するための調整 */
    border: 3px solid #fff;
    border-radius: 10px;
    background-color: #1a1a1a;
  }
}
</style>